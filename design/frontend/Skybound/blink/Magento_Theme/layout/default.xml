<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>
        <referenceBlock name="wish-list-link" remove="true" />
        <referenceBlock name="advanced-search-link" remove="true"/>
        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceBlock name="currency" remove="true" />
        <referenceBlock name="store.settings.currency" remove="true" />
        <referenceBlock name="catalog.compare.sidebar" remove="true"/> 
        <referenceBlock name="wishlist_sidebar" remove="true" />
        <referenceBlock name="skip_to_content" remove="true" />
        <referenceBlock name="store_switcher" remove="true"/>
        <referenceBlock name="report.bugs" remove="true" />
         <referenceBlock name="top.search" remove="true" />
         <referenceBlock name="sales-guest-form-link" remove="true"/>
        <referenceBlock name="catalog.leftnav" remove="true"/>
        <referenceBlock name="search-term-popular-link" remove="true"/>
        <referenceBlock name="catalog-search-advanced-link" remove="true"/>
        <referenceBlock name="sale.reorder.sidebar" remove="true"/>
         <referenceBlock name="customer-account-navigation-my-credit-cards-link" remove="true"/>
         <referenceBlock name="amblog-customer-account-tab-blog-posts" remove="true"/>
       <!--  <referenceBlock name="minicart" remove="true"/>-->
        
          
        <!--<referenceContainer name="header-wrapper">
            <block class="Magento\Framework\View\Element\Template" name="header.promotion.block.one" template="Magento_Theme::html/contact-block.phtml" after="logo"/>
           
        </referenceContainer>-->
        
        <referenceBlock name="register-link">
            <arguments>
                <argument name="label" xsi:type="string" translate="true">Sign Up</argument>
            </arguments>
        </referenceBlock>
        
        <move element="contact-us-link" destination="footer_links" after="custom-footer-link-about" />
      
        <referenceBlock name="footer_links">
         <block class="Magento\Framework\View\Element\Html\Link" name="custom-footer-link-about">
             <arguments>
                 <argument name="label" xsi:type="string">About Us</argument>
                 <argument name="path" xsi:type="string">about</argument>
             </arguments>
         </block>
        </referenceBlock>
        
          
    </body>
</page>
