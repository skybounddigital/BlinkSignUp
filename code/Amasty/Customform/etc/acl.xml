<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Amasty_Customform::Customform" title="Amasty: Custom Forms" sortOrder="20" >
                        <resource id="Amasty_Customform::forms" title="Forms" sortOrder="10" >
                            <resource id="Amasty_Customform::page" title="Form Edit" sortOrder="10" />
                            <resource id="Amasty_Customform::delete" title="Delete Form" sortOrder="20" />
                        </resource>
                        <resource id="Amasty_Customform::data" title="Submitted Data" sortOrder="20" />
                    </resource>
                </resource>

                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Amasty_Customform::config" title="Amasty Custom Forms" sortOrder="032106" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
